{
  "name": "@acme/locales",
  "version": "2.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./server": "./src/server.ts",
    "./client": "./src/client.ts",
    "./provider": "./src/provider.tsx",
    "./lang/*": "./src/lang/*.ts"
  },
  "scripts": {
    "build": "pnpm run generate",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "clean:cache": "git clean -xdf .cache",
    "dev": "nodemon --watch ./src/lang --ext json --exec \"pnpm run generate\"",
    "format": "prettier --check . '!src/generated/**' --ignore-path ../../.gitignore",
    "generate": "node --import tsx/esm ./src/generate.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "prettier": "@acme/prettier-config",
  "dependencies": {
    "next-international": "1.2.4",
    "react": "18.3.1"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tailwind-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@types/react": "18.3.11",
    "eslint": "9.12.0",
    "nodemon": "3.1.7",
    "prettier": "3.3.3",
    "react": "18.3.1",
    "tsx": "4.19.1",
    "typescript": "5.6.3"
  }
}
